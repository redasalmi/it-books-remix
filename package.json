{
  "private": true,
  "name": "it-books-remix",
  "description": "Website for IT, Programming and Computer Science Books",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:netlify\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "build": "npm run clean && npm run build:css && remix build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "clean": "rimraf public/build && rimraf netlify/functions/server/build",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-js-pagination": "^3.0.3",
    "remix": "^1.1.1",
    "sharp": "^0.29.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.9",
    "@types/react-js-pagination": "^3.0.4",
    "@types/sharp": "^0.29.5",
    "autoprefixer": "^10.4.1",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.14",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
