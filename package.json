{
  "private": true,
  "name": "it-books-remix",
  "version": "1.0.0",
  "description": "Website for IT, Programming and Computer Science Books",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redasalmi/it-books-remix.git"
  },
  "author": "Reda Salmi <reda.salmi.elt@gmail.com> (https://redasalmi.netlify.app/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/redasalmi/it-books-remix/issues"
  },
  "homepage": "https://github.com/redasalmi/it-books-remix#readme",
  "scripts": {
    "css:build": "postcss styles --base styles --dir app/styles",
    "css:build:watch": "npm run css:build -- --watch",
    "css:build:prod": "npm run css:build -- --env production",
    "dev": "concurrently \"npm run css:build:watch\" \"npm run dev:netlify\"",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "prebuild": "npm run clean",
    "build": "npm run css:build:prod && remix build",
    "clean": "rimraf ./node_modules/.cache ./app/styles ./public/build ./netlify/functions/server/build",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "sharp": "^0.29.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.9",
    "@types/sharp": "^0.29.5",
    "autoprefixer": "^10.4.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.14",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
